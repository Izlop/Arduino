#include <Wire.h> 
#include <LiquidCrystal_I2C.h>

//Crear el objeto lcd  direcci√≥n  0x27 y 16 columnas x 2 filas
LiquidCrystal_I2C lcd(0x27,16,2);  //


void setup() {
  // Inicializar el LCD
  lcd.begin();
  
  //Encender la luz de fondo.
  lcd.backlight();
  // Escribimos el Mensaje en el LCD.
  lcd.print("hola ");
}

void loop(){
  
   lcd.setCursor(0, 1);
  lcd.print("Hola");
  delay(10000);
   for(int acumulador=1; acumulador<=10 ; acumulador++){
    lcd.setCursor(0, 1);
   lcd.print("Joooo");
   delay(10000);
  for(int acumulador=1; acumulador<=10; acumulador++){
     lcd.setCursor(0, 1);
     lcd.print(millis()/10);
    lcd.print("Adios");
    delay(10000);
  }
  }
}
